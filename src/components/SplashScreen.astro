import logo from '../../public/logo.svg';
import { Image } from 'astro:assets';
---

<div id="splash-screen" class="splash-screen">
  <Image src={logo} alt="Logo" class="img-fluid" />
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const splashScreen = document.getElementById("splash-screen");

    // Add the fade-out class after 2 seconds
    setTimeout(() => {
      if (splashScreen) {
        splashScreen.classList.add("fade-out");
      }
    }, 1000); // Adjust the duration as needed
  });
</script>

<style>
  .splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: white; /* Match your theme */
    color: white;
    z-index: 9999; /* Ensure it appears above all other content */
    display: flex;
    justify-content: center;
    align-items: center; /* Center the logo */
    transition: opacity 0.5s ease, visibility 1s ease; /* Smooth fade-out */
  }

  .splash-screen.fade-out {
    opacity: 0;
    visibility: hidden; /* Ensures the element is no longer interactive */
  }
</style>